#!/bin/bash

die() {
    echo $* >&2
    exit 1
}

if [ -e Makefile ]; then
    rm Makefile;
fi

if [ -e build.config ]; then
    rm build.config
fi

if [ -z "$*" ]; then
    echo "No configuration specified. Configurations available:" >&2
    for f in `ls build/*.config`; do
        echo `basename $f .config` >&2
    done;
    exit 1
fi

BUILD="build/$*.config"
if [ ! -e "$BUILD" ]; then
    echo "No build with name: $*" >&2
    exit 1
fi

cp "$BUILD" ./build.config
cp Makefile.in Makefile

# vim: set et :
